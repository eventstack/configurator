<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Eventstack Config Server</title>
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/app.css" rel="stylesheet">
</head>
<body>
<!-- Wrap all page content here -->
<div id="wrap">



        <!-- top navbar -->
        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">EventStack Configurator</a>

                </div>
                <nav class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">App <span class="caret"></span></a>
                            <ul id="apps-dropdown" class="dropdown-menu" role="menu">
                            </ul>
                        </li>
                        <li><a href="/logout">Logout</a></li>
                    </ul>
                </nav>
            </div>
        </div>

        <div class="container">
            <div class="row row-offcanvas row-offcanvas-left">

                <div class="panel properties-panel">
                    <div class="panel-heading">
                        <h2 id="app-name">[App name here]</h2>
                    </div>
                    <div class="panel-body">
                        <dl class="pull-left">
                            <dt>App Id</dt>
                            <dd id="app-id">[App id here]</dd>
                        </dl>
                        <ul class="nav nav-pills pull-right" id="env-list">
                        </ul>
                    </div>
                    <div class="panel-footer">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-env-modal">
                            <span class="glyphicon glyphicon-plus"></span> New environment
                        </button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#delete-env-modal">
                            <span class="glyphicon glyphicon-minus"></span> Delete environment
                        </button>
                    </div>
                </div>

                <div class="panel properties-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Properties</h3>
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" role="form" id="propsForm">
                            <div id="properties">
                                <!-- the properties get rendered here -->
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button id="discard-changes-button" class="btn btn-default">Discard Changes</button>
                                    <button type="submit" class="btn btn-primary">Update</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="panel-footer">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-property-modal">
                            <span class="glyphicon glyphicon-plus"></span> New property
                        </button>
                    </div>
                </div>

                <div class="panel properties-panel">
                    <div class="panel-heading">
                        <h3 class="panel-title">Application Keys</h3>
                    </div>
                    <div class="panel-body">
                        <div id="appkeys">
                        </div>
                    </div>
                    <div class="panel-footer">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#new-appkey-modal">
                            <span class="glyphicon glyphicon-plus"></span> New key
                        </button>
                    </div>
                </div>
            </div><!--/.row-->
        </div><!--/.container-->

</div>

<div id="footer">
    <div class="container">
        <p>Copyright 2014 eventstack.io</p>
    </div>
</div>


<!-- New App Modal -->
<div class="modal fade" id="new-app-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">New App</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="app-name" class="col-sm-2 control-label">App Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="app-name" placeholder="App Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="app-id" class="col-sm-2 control-label">App ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="app-id" placeholder="App ID">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Create App</button>
            </div>
        </div>
    </div>
</div>

<!-- New Environment Modal -->
<div class="modal fade" id="new-env-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">New Environment</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="env-id" class="col-sm-2 control-label">Env ID</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="env-id" placeholder="Environment ID">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Create Environment</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Environment Modal -->
<div class="modal fade" id="delete-env-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete Environment</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this environment?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Delete Environment</button>
            </div>
        </div>
    </div>
</div>

<!-- New Property Modal -->
<div class="modal fade" id="new-property-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">New Property</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="name" placeholder="Property Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="description" class="col-sm-2 control-label">Description</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="description" placeholder="Description">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="type" class="col-sm-2 control-label">Type</label>
                        <div class="col-sm-10">
                            <select id="type" class="form-control">
                                <option value="STRING">String</option>
                                <option value="INTEGER">Integer</option>
                                <option value="EMAIL">E-mail Address</option>
                                <option value="URL">URL</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="is-required" class="col-sm-2 control-label">Required</label>
                        <div class="col-sm-10">
                            <input type="checkbox" class="form-control" id="is-required">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Create Property</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Property Modal -->
<div class="modal fade" id="delete-property-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Delete Environment</h4>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this property?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Delete Property</button>
            </div>
        </div>
    </div>
</div>

<!-- New AppKey Modal -->
<div class="modal fade" id="new-appkey-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">New Application Key</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label for="app-key-name" class="col-sm-2 control-label">Key Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="app-key-name" placeholder="App Key Name">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary save-btn" data-dismiss="modal">Create App Key</button>
            </div>
        </div>
    </div>
</div>

<script id="property-def-template" type="x-tmpl-mustache" src="templates/dashboard-templates.mustache"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/mustache.js"></script>
<script type="text/javascript" src="js/dashboard.js"></script>
</body>
</html>